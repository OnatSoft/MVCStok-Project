@model MVCStok_Project.Models.Entity.Satislar_TBL

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Satışlar Sayfası</h2>

<br />

<button type="button" class="btn btn-primary" data-bs-target="#Modal1" data-bs-toggle="modal"> Satış Yap </button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h2 class="modal-title"> Satış Yapma Ekranı </h2>
            </div>
            <form method="post" action="/Sale/SaleAdd/">
                <div class="modal-body">
                    <label> Ürün Adı </label>
                    @Html.TextBoxFor(c => c.Urun, new { @class = "form-control", required="", @type="text" })
                    <br />
                    <label> Ürün Markası </label>
                    @Html.TextBoxFor(c => c.Marka, new { @class = "form-control", @required="", @type="text" })
                    <br />
                    <label> Adet </label>                                                                                                                                                                                                                                               
                    @Html.TextBoxFor(c => c.Adet, new { @class = "form-control", @required="", @type="number" })
                    <br />
                    <label> Müşteri Adı Soyadı </label>                                                                                                                                                                                                                                                                                                                                                                                         
                    @Html.TextBoxFor(c => c.Musteri, new { @class = "form-control", @required="", @type="text" })
                    <br />
                    <label> Müşteri E-posta </label>
                    @Html.TextBoxFor(c => c.MusteriMail, new { @class = "form-control", @required="", @type="email" })
                    <br />
                    <label> Müşteri Telefon </label>
                    @Html.TextBoxFor(c => c.MusteriTel, new { @class = "form-control", @required="", @type="tel", @maxlength="10" })
                    <br />
                    <label> Fiyat </label>
                    @Html.TextBoxFor(c => c.Fiyat, new { @class = "form-control", @required="" })
                    <br />
                    <button type="submit" class="btn btn-success"> Satışı Kaydet </button>
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal"> Vazgeç </button>
                </div>
            </form>

        </div>
    </div>
</div>