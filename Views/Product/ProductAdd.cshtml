@model MVCStok_Project.Models.Entity.Urunler_TBL

@{
    ViewBag.Title = "ProductAdd";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1> Ürün Ekleme </h1>

<br /><br />

<form method="post">
    <div>
        <label class="form-label"> Kategori Seçiniz </label>
        @Html.DropDownListFor(m => m.Kategoriler_TBL.KategoriID, (List<SelectListItem>)ViewBag.ktg, new { @class = "form-control" })
        <br />
        <label class="form-label"> Ürün Adı: </label>
        <input name="UrunAd" class="form-control" type="text" required maxlength="30" />
        <br />
        <label class="form-label"> Marka: </label>
        <input class="form-control" name="UrunMarka" type="text" required maxlength="20" />
        <br />
        <label class="form-label"> Stok: </label>
        <input class="form-control" name="Stok" type="number" required maxlength="4" />
        <br />
        <label class="form-label"> Fiyat: </label>
        <input class="form-control" name="Fiyat" type="number" required prefix="TL" />
        &nbsp;
    </div>
    <button class="btn btn-success"> Kaydet </button>
</form>